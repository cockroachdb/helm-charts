cockroachdb:
  crdbCluster:
    dataStore:
      volumeClaimTemplate:
        metadata:
          name: datadir
        spec:
          accessModes:
          - ReadWriteOnce
          resources:
            requests:
              storage: 60Gi
          volumeMode: Filesystem
    image:
      name: cockroachdb/cockroach:v25.1.5
    loggingConfigMapName: cockroachdb-log-config
    podTemplate:
      metadata:
        annotations:
          crdb: is-cool
        labels:
          app.kubernetes.io/component: database
          app.kubernetes.io/instance: cockroachdb
          app.kubernetes.io/name: cockroachdb
          crdb: is-cool
      spec:
        affinity:
          podAntiAffinity:
            preferredDuringSchedulingIgnoredDuringExecution:
            - podAffinityTerm:
                labelSelector:
                  matchLabels:
                    app.kubernetes.io/component: cockroachdb
                    app.kubernetes.io/instance: cockroachdb
                    app.kubernetes.io/name: cockroachdb
                topologyKey: kubernetes.io/hostname
              weight: 100
        containers:
        - env:
          - name: COCKROACH_CHANNEL
            value: kubernetes-operator-gke
          - name: POD_NAME
            valueFrom:
              fieldRef:
                apiVersion: v1
                fieldPath: metadata.name
          - name: GOMAXPROCS
            valueFrom:
              resourceFieldRef:
                divisor: "1"
                resource: limits.cpu
          - name: MEMORY_LIMIT_MIB
            valueFrom:
              resourceFieldRef:
                divisor: 1Mi
                resource: limits.memory
          - name: MY_ENV_VAR
            value: kubernetes-helm
          - name: HOST_IP
            valueFrom:
              fieldRef:
                apiVersion: v1
                fieldPath: status.hostIP
          - name: GODEBUG
            value: disablethp=1
          image: cockroachdb/cockroach:v25.1.5
          name: cockroachdb
          resources:
            limits:
              cpu: "2"
              memory: 8Gi
            requests:
              cpu: 500m
              memory: 2Gi
        imagePullSecrets:
        - name: myregistrykey
        nodeSelector:
          cloud.google.com/gke-nodepool: default-pool
        priorityClassName: ""
        terminationGracePeriodSeconds: 300
        tolerations:
        - effect: NoSchedule
          key: non-crdb
          operator: Exists
        topologySpreadConstraints:
        - labelSelector:
            matchLabels:
              app.kubernetes.io/component: cockroachdb
              app.kubernetes.io/instance: cockroachdb
              app.kubernetes.io/name: cockroachdb
          maxSkew: 1
          topologyKey: topology.kubernetes.io/zone
          whenUnsatisfiable: ScheduleAnyway
    regions:
    - cloudProvider: gcp
      code: us-central1
      domain: ""
      namespace: default
      nodes: 3
    service:
      ingress:
        enabled: true
        sql:
          annotations:
            key: value
          host: sql.test.com
          ingressClassName: nginx
        ui:
          annotations:
            key: value
          host: ui.local.com
          ingressClassName: nginx
      ports:
        grpc:
          port: 26258
        http:
          port: 8080
        sql:
          port: 26257
      public:
        name: cockroachdb-public
    startFlags:
      omit: null
      upsert:
      - --advertise-host=$(POD_NAME).cockroachdb.default
      - --certs-dir=/cockroach/cockroach-certs/
      - --sql-addr=:26257
      - --listen-addr=:26258
      - --cache=30%
      - --max-sql-memory=30%
      - --join=cockroachdb-0.cockroachdb.default:26258,cockroachdb-1.cockroachdb.default:26258,cockroachdb-2.cockroachdb.default:26258
  tls:
    enabled: true
    externalCertificates:
      certificates:
        caConfigMapName: cockroachdb-ca-crt
        nodeSecretName: cockroachdb-node-secret
        rootSqlClientSecretName: cockroachdb-client-secret
      enabled: true
    selfSigner:
      enabled: false
k8s:
  fullnameOverride: cockroachdb
